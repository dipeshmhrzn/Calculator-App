<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:layout_above="@id/layout_inputs"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:hint="0"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="#99ffffff"
        android:clickable="false"
        android:focusable="false"
        android:textSize="25dp" />
    <LinearLayout
        android:id="@+id/layout_inputs"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_row1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/button9"
                android:layout_weight=".25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:text="9"
                android:textSize="25dp" />
            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#80000000"
                android:text="8"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="7"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button_divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="/"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_row2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:text="6"
                android:textSize="25dp" />
            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#80000000"
                android:text="5"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="4"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button_mul"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="*"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_row3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:text="3"
                android:textSize="25dp" />
            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#80000000"
                android:text="2"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="1"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button_sub"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="-"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_row4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:text="0"
                android:textSize="25dp" />
            <Button
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#80000000"
                android:text="."
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_marginLeft="8dp"
                android:text="C"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/button_add"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:backgroundTint="#80000000"
                android:layout_toRightOf="@+id/button_clear"
                android:layout_marginLeft="8dp"
                android:text="+"
                android:textSize="25dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/button_answer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#80000000"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="8dp"
            android:text="="
            android:textSize="25dp"/>
    </LinearLayout>
</RelativeLayout>